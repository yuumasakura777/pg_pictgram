

<div class="comments-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 comments-new-container">
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.hidden_field :user_id, value: @comment.user_id %>
            <%= f.hidden_field :topic_id, value: @comment.topic_id %>
            <%= f.label :content %>
            <%= f.text_field :content, class: 'form-control' %>
          </div>
          <%= f.submit 'コメント', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
